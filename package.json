{
	"name": "swr-codegen",
	"private": false,
	"author": "Rasoul Mohammadi, Amirreza Hossein Panah",
	"version": "0.0.2",
	"type": "commonjs",
	"main": "dist/main.js",
	"scripts": {
		"dev": "nodemon --exec \"yarn build\" -e ts,ejs ",
		"build": "copyfiles -f **/*.ejs dist/templates && tsc",
		"prepublish": "yarn build && npm i -g .",
		"start": "node dist/main.js",
		"prepare": "husky install",
		"git-format": "pretty-quick --staged"
	},
	"devDependencies": {
		"@types/ejs": "^3.1.2",
		"@types/node": "^20.6.0",
		"@types/prompts": "^2.4.6",
		"copyfiles": "^2.4.1",
		"nodemon": "^3.0.1",
		"prettier": "2.8.8",
		"pretty-quick": "^3.1.3",
		"typescript": "^5.0.2"
	},
	"dependencies": {
		"@graphql-codegen/cli": "^2.3.0",
		"@graphql-codegen/client-preset": "^4.1.0",
		"commander": "^11.0.0",
		"ejs": "^3.1.9",
		"globy": "^0.1.8",
		"graphql": "^16.8.0",
		"husky": "^8.0.3",
		"prompts": "^2.4.2",
		"typescript-parser": "^2.6.1"
	},
	"nodemonConfig": {
		"ignore": [
			"**/dist/**",
			"**/example/**"
		]
	},
	"bin": "./dist/main.js",
	"preferGlobal": false
}
